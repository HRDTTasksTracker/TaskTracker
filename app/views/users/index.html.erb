<%=render "header.html.erb"%>

<h1 class="user-page-title">Contacts</h1>

<!-- This will list all the users (contacts) as cards -->
<body>
  <div>
  <% @users.in_groups_of(3) do |group| %>
    <div class="card-group">
      <% group.compact.each do |user| %>

        <div class="card">
          <a href="users/<%= user.id %>">
          <div class="container">
            <h4><b> <%=user.full_name%> </b></h4>
            <p>User ID: <%=user.id%></p>
            <p>Role: <%=user.role%></p>
            <p>Email: <%=user.email%></p>
            <p>Phone: <%=user.phone[0] + user.phone[1] + user.phone[2] + "-" + user.phone[3] + user.phone[4] + user.phone[5] + "-" + user.phone[6] + user.phone[7] + user.phone[8] + user.phone[9]%></p>
          </div>
        </div>

      <% end %>
    </div>
  <% end %>
</body>
