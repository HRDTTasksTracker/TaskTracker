<!-- Navigation bar -->
<header>
  <h2>
    <table>
      <tc>
        <td> 
          <img src="/assets/HRDT.png" alt="Logo" width="110px" height="50px" style="vertical-align:top;">
        </td>
      </tc>
      <tc>
        <td>
                  
        </td>
      </tc>
      <tc>
          <td>
            <a class="header" href="/index.html" >Home</a>
          </td>
      </tc>

      <tc>
        <td>
          <a class="header" href="/tasks">TaskTracker</a>
        </td>
      </tc>

      <tc>
        <td>
          <a class="header" href="/users">Contacts</a>
        </td>
      </tc>
      <tc>
        <td>
          <a class="header" href="/index.html">Help</a>
        </td>
      </tc>
      <% if current_user.role == 'admin' || current_user.role == 'moderator' %>
        <tc>
          <td>
            <a class="header" href="/valid_emails">Whitelist Email</a>
          </td>
        </tc>
      <% end %>
      <tc>
        <td>
          <a class="header" href="/logout">Sign Out</a>
