<h1>Tasks</h1>

<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<body>
  <% @tasks.in_groups_of(3) do |group| %>
    <div>
      <% group.compact.each do |task| %>
        <div>
          <%= task.id %>. <%= task.task_name %>
        </div>
      <% end %>
    </div>
  <% end %>
</body>
