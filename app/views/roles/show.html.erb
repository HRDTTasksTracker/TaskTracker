<!--<h1>Role Detatils for Role with ID: <%= @roles.id %> </h1>-->

<div>
  <div>
    <h1>
      <%= @roles.role_name %>
    <h1>
  </div>


  <% if current_user.role == 'admin' || current_user.role == 'moderator' %>
      <% if @roles.role_name != 'admin' %>
      <div>
        <button>
          <%= link_to "Delete", role_path(@roles),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </button>
      </div>
    <% end %>
  <% end %>


</div>
